<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical">

    <Toolbar
    android:minHeight="?android:attr/actionBarSize"
    android:background="?android:attr/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbarMenu"/>

    <TextView
        android:text="Bienvenido"
        android:textSize="90px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="118.5dp"
        android:id="@+id/banner"/>

    <Button
        android:text="Ver Bolsillos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnReadPocket" />

    <Button
        android:text="Crear Bolsillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreatePocket" />

    <Button
        android:text="Editar Bolsillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdatePocket" />

    <Button
        android:text="Eliminar Bolsillo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeletePocket" />

    <Button
        android:text="Cerrar sesiÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCerrar" />

</LinearLayout>
